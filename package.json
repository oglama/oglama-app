{
    "name": "oglama",
    "version": "0.0.3",
    "description": "Private, community-driven web automation",
    "author": "Oglama (https://oglama.com)",
    "license": "Apache-2.0",
    "private": true,
    "main": "run.js",
    "scripts": {
        "start": "electron ./dist/run.js",
        "lint": "eslint --fix --cache \"tools/**/*.js\"",
        "format": "prettier --write \"tools/**/*.js\" \"dist/lib/**/*.js\" \"dist/run.js\"",
        "build": "node tools/build"
    },
    "build": {
        "asar": true,
        "appId": "com.oglama",
        "productName": "Oglama",
        "copyright": "Copyright Â© 2024-2025 Oglama (https://oglama.com)",
        "directories": {
            "output": "out"
        },
        "afterPack": "./tools/build-hooks/after-pack.js",
        "files": [
            "!**/CODE-OF-CONDUCT.md",
            "!**/CONTRIBUTING.md",
            "!**/node_modules/**",
            "!**/jsconfig.json",
            "!**/*.config.js",
            "!**/README.md",
            "!**/tools/**",
            "!**/dist/**",
            "!**/.*"
        ],
        "mac": {
            "icon": "dist/res/icons/icon.icns",
            "artifactName": "${productName}-${version}.${ext}",
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities",
            "entitlements": "dist/entitlements.mac.plist"
        },
        "win": {
            "icon": "dist/res/icons/icon.ico",
            "artifactName": "${productName}-${version}-setup.${ext}",
            "target": "nsis"
        },
        "linux": {
            "icon": "dist/res/icons/icon.png",
            "artifactName": "${productName}-${version}.${ext}",
            "target": "deb",
            "category": "Utility",
            "maintainer": "Oglama <hello@oglama.com>",
            "description": "Private, community-driven web automation"
        },
        "nsis": {
            "oneClick": true,
            "perMachine": false,
            "shortcutName": "Oglama",
            "installerIcon": "dist/res/icons/icon.ico",
            "uninstallerIcon": "dist/res/icons/icon.ico",
            "createDesktopShortcut": false,
            "createStartMenuShortcut": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "oglama",
                "repo": "oglama-app",
                "releaseType": "release"
            }
        ]
    },
    "devDependencies": {
        "@electron/asar": "3.4.1",
        "asar": "3.2.0",
        "cross-spawn": "7.0.6",
        "electron": "31.7.7",
        "electron-builder": "25.1.8",
        "eslint": "8.57.1",
        "eslint-config-google": "0.14.0",
        "eslint-config-prettier": "8.10.0",
        "eslint-import-resolver-alias": "1.1.2",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-unused-imports": "2.0.0",
        "prettier": "2.8.8"
    }
}